<% if @range == "User" %>
  <h2>"<%= @word %>"でユーザー検索</h2>
  <table class="table">
  <thead>
  <tr>
  <th>image</th>
  <th>name</th>
  <th colspan="3"></th>
  </tr>
  </thead>
    <% @users.each do |user| %>
        <tr>
          <td><%= link_to (attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: "40x40"), user_path(user.id) %></td>
          <td><%= user.name %></td>
          <td>フォロー数: <%= user.followings.count %></td>
          <td>フォロワー数: <%= user.followers.count %></td>
          <td>
          <% if user.id != current_user.id %>
          <% if current_user.following?(user) %>
          <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete %>
          <% else %>
          <%= link_to "フォローする", user_relationships_path(user.id), method: :post %>
          <% end %>
          <% end %>
          </td>
          <td><%= link_to "Show", user_path(user.id) %></td>
       <% end %>
        </tr>
  </table>
<% else %>
  <h2>"<%= @word %>"で投稿検索</h2>
  <table class="table table-hover table-inverse">
  <thead>
  <tr>
  <th>Image</th>
  <th>Name</th>
  <th>Title</th>
  <th>Opinion</th>
  <th colspan="2"></th>
  </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
    <td><%= link_to (attachment_image_tag item.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: "40x40"), user_path(item.user_id) %></td>
    <td><%= item.user.name %></td>
    <td><%= link_to (item.title), item_path(item.id) %></td>
    <td><%= item.body %></td>
    <% end %>
<% end %>
  </tr>
  </tbody>
</table>