<% @items.each do |item| %>
<div>
  <%= link_to item_path(item.id) do %>
   <%= attachment_image_tag item, :image %>
  <% end %>
  <p>投稿ユーザー画像：<%= image_tag('no_image.jpg') %></p>
  <p>タイトル：<%= item.title %></p>
  <p>説明：<%= item.body %></p>
  <p>ユーザーネーム：<%= item.user.name %></p>
  <p><%= link_to "#{item.comments.count} コメント", item_path(item.id) %></p>
</div>
<% end %>