<div>
  <%= attachment_image_tag @item, :image %>
  <p>タイトル：<%= @item.title %></p>
  <p>説明：<%= @item.body %></p>
  <p>ユーザーネーム：<%= @item.user.name %></p>
  <p>投稿日時：<%= @item.created_at.strftime('%Y/%m/%d') %></p>
  <% if @item.user == current_user %>
    <%= link_to "削除", item_path(@item), method: :delete %>
  <% end %>
</div>