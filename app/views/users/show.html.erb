<div class="container">
  <div class="row">
<%= render 'items/list', user: @user, item: @item  %>

<div class="col-md-8 offset-md-1">
  <h2>投稿</h2>
  <table class="table">
  <thead>
  <tr>
  <th></th>
  <th>Title</th>
  <th>Opinion</th>
  <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
  <tr>
    <td>
      <%= link_to user_path(@user) do %>
      <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: "40x40" %><br>
      <% end %>
      </td>
    <td><%= link_to item.title, item_path(item.id) %></td>
    <td><%= item.body %></td>
  </tr>
  <% end %>

  </tbody>
  </table>
</div>
</div>
</div>
    </div>
<%= paginate @items %>