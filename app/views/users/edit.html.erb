<div class="container">
  <div class="row">
    <div class="col-md-8 px-5 mx-auto">
      <h2>プロフィール編集</h2>
      <%= form_with model:@user, local:true do |f| %>
        <label for="inputName">Name</label>
        <p><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></p>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
        <label for="inputImage">ProfileImage</label>
        <p><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></p>
        <%= f.submit "変更を保存" %>
      <% end %>
    </div>
  </div>
</div>